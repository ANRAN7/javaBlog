package net.peace.Thread;

import java.awt.Color;
import java.awt.Graphics;

import javax.swing.JFrame;
import javax.swing.JPanel;
/**
 * 
* @ClassName: TestMovalBall
* @Description: TODO(这里用一句话描述这个类的作用)
* @author peace w_peace@163.com 
* @date Sep 19, 2015 10:34:46 AM
*
 */
public class TestMovalBall extends JFrame {
	private Mypanel mp;
	public TestMovalBall() {
		this.setSize(600,500);
		this.setLocation(200,100);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		mp=new Mypanel(40, 50);
		this.add(mp);
		this.setVisible(true);
	}
	class Mypanel extends JPanel{
		int x,y;
		public Mypanel(int x,int y){
			this.x=x;
			this.y=y;
			
		}
		@Override
		public void paint(Graphics g) {
			// TODO Auto-generated method stub
			super.paint(g);
			g.setColor(Color.red);
		    g.fillOval(x, y, 50, 50);
		
		}
	}
	public static void main(String[] args) {
		//new TestMovalBall();
		//直接使用Thread类
		//建立线程类对象
		Reflash f=new Reflash();
		//使线程类开始运行，使用start方法，千万记住不是run
		f.start();
		//使用runnable建立线程
		//建立Thread类对象，传入Runnable对象；
		Thread thread=new Thread(new Runal());
		thread.start();
		
		for(int i=1;i<10;i++){
			System.out.println("main"+i);
		}
	}

}
/*
 *创建一个简单的线程类； 
 */
class Reflash extends Thread{
	@Override
	//建立run方法
	public void run() {
		for(int i=1;i<10;i++){
			System.out.println("Reflash"+i);
		}
		super.run();
	}
}

class Runal implements Runnable{
   // 实现Runnable的run方法
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i=1;i<10;i++){
			System.out.println("runal"+i);
		}
	}
	
}