<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.rlovep.many2many">
     <class name="Developer" table="developer">
         <id name="id">
            <generator class="native"></generator>
         </id>
         <property name="name"></property>
         <!-- 
			多对多映射配置： 员工方
				name  指定映射的集合属性
				table 集合属性对应的中间表
				key   指定中间表的外键字段(引用当前表developer主键的外键字段)
				many-to-many
					column 指定外键字段对应的项目字段
					class  集合元素的类型
		 -->
         <set name="projects" cascade="save-update" table="t_relation" inverse="true">
             <key column="d_id"></key>
             <many-to-many column="p_id" class="Project"></many-to-many>
         </set>
     
     </class>

</hibernate-mapping>